<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.READ_PRIVILEGED_PHONE_STATE"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".acitivities.base.BaseApplication"
        android:allowBackup="false"
        android:appComponentFactory="android.support.v4.app.CoreComponentFactory"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.MahaMillateApp"
        tools:replace="android:appComponentFactory,allowBackup">
        <activity
            android:name=".acitivities.ui.MobileCheckActivity"
            android:exported="false" />
        <activity
            android:name=".acitivities.base.IntroActivity"
            android:exported="false" />
        <activity
            android:name=".acitivities.ui.quiz.QuizScoreActivity"
            android:exported="false" />
        <activity
            android:name=".acitivities.ui.quiz.QuizQuestionsActivity"
            android:exported="false" />
        <activity
            android:name=".acitivities.ui.quiz.QuizShareActivity"
            android:exported="false" />
        <activity
            android:name=".acitivities.ui.quiz.QuizCertificateActivity"
            android:exported="false" />
        <activity
            android:name=".acitivities.ui.quiz.QuizLevelsActivity"
            android:exported="false" />
        <activity
            android:name=".acitivities.ui.quiz.LeaderboardActivity"
            android:exported="false" />
        <activity
            android:name=".acitivities.ui.RegistrationActivity"
            android:exported="false" />
        <activity
            android:name=".acitivities.ui.quiz.QuizMainActivity"
            android:exported="false" />
        <activity
            android:name=".acitivities.ui.videos.VideosActivity"
            android:exported="false" />
        <activity
            android:name=".acitivities.ui.blog.BlogActivity"
            android:exported="false" />
        <activity
            android:name=".acitivities.ui.SelectLanguageActivity"
            android:exported="false" />
        <activity
            android:name=".acitivities.ui.OtpCheckActivity"
            android:exported="false" />
        <activity
            android:name=".acitivities.ui.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:label="@string/title_activity_main" />
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>